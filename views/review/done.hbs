{{#each alerts}}
<div class="alert alert-{{this.class}} m-3" role="alert">{{{input_long this.message}}}</div>
{{/each}}

<div class="my-3">
    <h2>My reviewed submissions</h2>
    <ul>
        {{#each reviewed}}
        <li>{{#unless this.uptodate}}{{{icon 'issue-reopened' 'Proposal updated since last review' '#995030'}}} {{/unless}}<a href="/cfp/{{this.cfpId}}">{{this.title}}</a></li>
        {{/each}}
    </ul>
    <h2>Submissions I cannot review</h2>
    <ul>
        {{#each refused}}
        <li><a href="/cfp/{{this.cfpId}}">{{this.title}}</a></li>
        {{/each}}
    </ul>
</div>

{{#each alerts}}
<div class="alert alert-{{this.class}} m-3" role="alert">{{{input_long this.message}}}</div>
{{/each}}

<div class="row justify-content-md-center" style="margin-top: 30px">
    <div class="col-md-6">

        {{#if message}}
        <div class="alert {{messageClass}}" role="alert">
            {{message}}
        </div>
        {{/if}}

        <form method="POST" action="/forgot">
            <div class="form-group required">
                <label for="emailInput" class='control-label'>Email address linked to your account</label>
                <input name="mail" type="email" class="form-control" id="emailInput" value="{{mail}}" type="email"
                    required>
            </div>
            <button type="submit" class="btn btn-primary">Request reset link</button>
        </form>
    </div>
</div>
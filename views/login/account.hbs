{{/each}}

<form method="POST" action="/account">
    <div class="form-group my-3">
        <label for="IDInput" class='control-label'>ID</label>
        <button type="button" class="btn btn-outline-info btn-sm" data-container="body" data-toggle="popover"
                                    data-placement="right" data-html=true data-content="Share this ID with your co-speaker in order for them to mark you as speaker in the proposal.">
                                    {{{adviceIcon}}}</button>
        <input name="id" type="text" class="form-control" id="IDInput" value="{{userId}}" readonly>
    </div>

    <div class="form-group required">
        <label for="emailInput" class='control-label'>Email address</label>
        <input name="mail" type="email" class="form-control" id="emailInput" value="{{mail}}" type="email" required>
    </div>

    <div class="form-group required">
        <label for="firstNameInput" class='control-label'>First Name</label>
        <input name="firstName" type="text" class="form-control" id="firstNameInput" value="{{firstName}}" required>
    </div>

    <div class="form-group required">
        <label for="lastNameInput" class='control-label'>Last Name</label>
        <input name="lastName" type="text" class="form-control" id="lastNameInput" value="{{lastName}}" required>
    </div>

    <div class="form-group">
        <label for="passwordInput" class='control-label'>Password</label>
        <input name="password" type="password" class="form-control" id="passwordInput" placeholder="Change Password">
    </div>

    <div class="form-group">
        <label for="confirmPasswordInput" class='control-label'>Confirm Password</label>
        <input name="confirmPassword" type="password" class="form-control" id="confirmPasswordInput"
            placeholder="Re-enter your password here">
    </div>

    <div class="form-group">
        <label for="affiliationInput" class='control-label'>Affiliation</label>
        <input name="affiliation" type="text" class="form-control" id="affiliationInput" value="{{affiliation}}">
    </div>

    <div class="form-group">
        <label for="bio-input" class='control-label'>Bio</label>
        <textarea name="bio" type="text" class="form-control" id="bio-input">{{bio}}</textarea>
    </div>

    <div class="form-group">
        <label for="pastExperience-input" class='control-label'>Past Experience</label>
        <textarea name="pastExperience" type="text" class="form-control"
            id="pastExperience-input">{{pastExperience}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary my-3">Update</button>

    {{#if admin}}
    <br />
    <a class="btn btn-primary" href="/tags">
        Tags
    </a>
    <a class="btn btn-primary" href="/users">
        Users
    </a>
    <a class="btn btn-primary" href="/alerts">
        Alerts
    </a>
    {{/if}}
</form>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">My proposals</a>

    <ul class="navbar-nav navbar-expand-md ml-auto">
        <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/account">Account</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/cfp">New Proposal</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/disconnect" data-toggle="tooltip" data-placement="bottom" title="Disconnect">{{{icon 'x-circle-fill' 'disconnect' '#998030'}}}</a>
        </li>
    </ul>
</nav>

{{#each alerts}}
<div class="alert alert-{{this.class}} m-3" role="alert">{{{input_long this.message}}}</div>
{{/each}}

<div>
    <div class="container my-3">
        <div class="row">
            <div class="col-md-10">
                <h1>My proposals</h1>
                {{#each proposals}}
                <a
                    href="/preview/{{this.index}}">
                    {{#if this.finished}} {{{../doneIcon}}} {{else}} {{{../draftIcon}}} {{/if}} 
                    {{this.titleOfThePresentation}}</a><br />
                {{/each}}
            </div>
            <div class="col my-4">
                <div class="card">
                    <div class="card-header">Icons</div>
                    <div class="card-body">
                {{{doneIcon}}} Submitted talks
                <br />
                {{{draftIcon}}} Draft talks not yet submitted
                </div>
                </div>
            </div>
        </div>
    </div>
    <a class="btn btn-primary" href="/cfp">Write a new proposal</a>
</div>
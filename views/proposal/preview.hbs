{{#each alerts}}
<div class="alert alert-{{this.class}} m-3" role="alert">{{{input_long this.message}}}</div>
{{/each}}

{{#if finished}}
<p>Thanks for submitting your proposal!</p>
<p>You can still come back and edit your proposal until the call for paper is closed.</p>
{{else}}
<p>Your proposal is saved.</p>
<p><b>It was not submitted yet</b>. Don't forget to come back and submit it before the call for paper is closed.</p>
{{/if}}

<input type="hidden" name="cfpid" value="{{cfpid}}">
<div class="my-3">
    <div class="card my-3">
        <div class="card-header">
            <h5 class="card-title">Presentation</h5>
            <h6 class="card-subtitle mb-2 text-muted">This part will be visible to all the jury members.</h6>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Which language will you present in?</h5>
                    </div>
                    <div class="card-body">
                        <p>{{language}}</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Title of the presentation</h5>
                    </div>
                    <div class="card-body">
                        <p>{{input_short title}} </p>
                    </div>
                </div>
            </div>
            <div class="form-group required">
                <div class="card">
                    <div class="card-header">
                        <h5>Which Track are you targetting?</h5>
                    </div>
                    <div class="card-body">
                        <p>{{track}}</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Abstract</h5>
                    </div>
                    <div class="card-body">
                        <p>{{{input_long abstract}}}</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Outline</h5>
                    </div>
                    <div class="card-body">
                        <p>{{{input_long outline}}}</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Preferred Talk Duration</h5>
                    </div>
                    <div class="card-body">
                        <p>{{{duration}}}</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Tags</h5>
                    </div>
                    <div class="card-body">
                        <p>{{tags}}</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Is there anything else you would like to tell
                            us?</h5>
                    </div>
                    <div class="card-body">
                        <p>{{{input_long anything}}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card my-3">
        <div class="card-header">
            <h5 class="card-title">Speaker</h5>
            <h6 class="card-subtitle mb-2 text-muted">This part will be visible only to the organizers after a first
                phase of anonymous scoring has been completed.</h6>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Name</h5>
                    </div>
                    <div class="card-body">
                        <p>{{firstName}} {{lastName}}</p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Affiliation</h5>
                    </div>
                    <div class="card-body">
                        <p>{{affiliation}}</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Bio</h5>
                    </div>
                    <div class="card-body">
                        <p>{{{input_long bio}}}</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="card">
                    <div class="card-header">
                        <h5>Past Experience As a Speaker</h5>
                    </div>
                    <div class="card-body">
                        <p>{{{input_long pastExperience}}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        {{#if coc}}<label for="coc-input" class="control-label">I agree to respect the <a
                href="https://berlincodeofconduct.org/">Berlin Code Of Conduct</a></label>{{/if}}
    </div>

    <a class="btn btn-primary" href="/cfp/{{cfpid}}">Edit or cancel this proposal</a>
    <a class="btn btn-secondary" href="/proposals">View all my proposals</a>
</div>